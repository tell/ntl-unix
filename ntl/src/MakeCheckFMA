
echo "Checking for AVX2 with FMA intrinsics"

cp ../include/NTL/have_fma_no.h ../include/NTL/have_fma.h

sh RemoveProg CheckFMA
echo $1 -o CheckFMA CheckFMA.c  $2
$1 -o CheckFMA CheckFMA.c $2

if test -f CheckFMA
then
   if ./CheckFMA
   then
      echo "have FMA"
      cp ../include/NTL/have_fma_yes.h ../include/NTL/have_fma.h
      sh RemoveProg CheckFMA
      exit 0
   fi
fi

echo "DO NOT have FMA"
sh RemoveProg CheckFMA
exit 0

