
echo "Checking for AVX intrinsics"

cp ../include/NTL/have_avx_no.h ../include/NTL/have_avx.h

sh RemoveProg CheckAVX
echo $1 -o CheckAVX CheckAVX.c  $2
$1 -o CheckAVX CheckAVX.c $2

if test -f CheckAVX
then
   if ./CheckAVX
   then
      echo "have AVX"
      cp ../include/NTL/have_avx_yes.h ../include/NTL/have_avx.h
      sh RemoveProg CheckAVX
      exit 0
   fi
fi

echo "DO NOT have AVX"
sh RemoveProg CheckAVX
exit 0

